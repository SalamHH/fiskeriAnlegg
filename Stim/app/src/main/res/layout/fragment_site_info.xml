<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue"
    android:backgroundTint="@color/skyblue"
    android:backgroundTintMode="multiply"
    android:gravity="center"
    tools:context=".SiteInfoFragment">

    <include
        android:id="@+id/LoadingScreen"
        layout="@layout/loading_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        tools:visibility="gone" />

    <!--Background for icons on toolbar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="7dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="7dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Name of site-->
            <TextView
                android:id="@+id/siteName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/overwave"
                android:gravity="center_horizontal"
                android:text="@string/site_name"
                android:textColor="@color/colorAccent"
                android:textSize="45sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/generalInfoBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal">

                        <!-- GENERAL INFO ABOUT THE SITE -->

                        <TextView
                            android:id="@+id/generellInformasjon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center_horizontal"
                            android:text="Generell informasjon om anlegget"
                            android:textColor="@color/primaryTextColor"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/pil"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/generellInformasjon"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/down_darkblue"
                            app:tint="@color/primaryTextColor"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <RelativeLayout
                        android:id="@+id/relativelayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone">

                        <!-- POSISJON -->

                        <TextView
                            android:id="@+id/posisjon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Posisjon: "
                            android:textColor="@color/primaryTextColor" />

                        <TextView
                            android:id="@+id/posisjonView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/blank"
                            android:textColor="@color/primaryTextColor" />

                        <!-- ANLEGGSNUMMER -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/posisjonView"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Anleggsnummer:"
                            android:textColor="@color/primaryTextColor" />

                        <TextView
                            android:id="@+id/anleggsnrView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/posisjonView"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/blank"
                            android:textColor="@color/primaryTextColor" />

                        <!-- PLASSERING -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/anleggsnrView"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Plassering:"
                            android:textColor="@color/primaryTextColor" />

                        <TextView
                            android:id="@+id/plasseringView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/anleggsnrView"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/blank"
                            android:textColor="@color/primaryTextColor" />

                        <!-- KAPASITET -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/plasseringView"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Kapasitet:"
                            android:textColor="@color/primaryTextColor" />

                        <TextView
                            android:id="@+id/kapasitetView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/plasseringView"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/blank"
                            android:textColor="@color/primaryTextColor" />

                        <!-- VANNTYPE -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/kapasitetView"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Vanntype:"
                            android:textColor="@color/primaryTextColor" />

                        <TextView
                            android:id="@+id/vannTypeView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/kapasitetView"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/blank"
                            android:textColor="@color/primaryTextColor" />

                        <!-- KOMMUNE -->

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/vannTypeView"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Kommune:"
                            android:textColor="@color/primaryTextColor" />

                        <TextView
                            android:id="@+id/prodOmraadeView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/vannTypeView"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/blank"
                            android:textColor="@color/primaryTextColor" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- Information cards-->
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="vertical">


                <!-- Water information card -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.8" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.2" />

                    <ImageView
                        android:id="@+id/wavesIcon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:elevation="11dp"
                        android:transitionName="icon_water"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/waterInfoCard"
                        app:srcCompat="@drawable/mdi___waves"
                        />

                    <ImageView
                        android:id="@+id/circleFilledWhiteIcon"
                        android:layout_width="71dp"
                        android:layout_height="66dp"
                        android:layout_gravity="center"
                        android:elevation="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/waterInfoCard"
                        app:srcCompat="@drawable/circle_filled_white" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/waterInfoCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <!-- Water card title -->
                            <TextView
                                android:id="@+id/waterCardTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="32dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="@string/vann"
                                android:textAlignment="center"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <!-- Textboxes for currents -->
                            <LinearLayout
                                android:id="@+id/currents"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.08"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/waterCardTitle"
                                app:layout_constraintVertical_bias="0.0"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="STRØMN."
                                    android:textColor="@color/primaryTextColor" />

                                <TextView
                                    android:id="@+id/currentsValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="TextView"
                                    android:textColor="@color/api_title_color"
                                    android:textSize="14sp"
                                    tools:text="0.04m/s" />

                            </LinearLayout>

                            <!-- Textboxes for temprature -->
                            <LinearLayout
                                android:id="@+id/temperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.501"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/waterCardTitle"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="TEMP."
                                    android:textColor="@color/primaryTextColor" />

                                <TextView
                                    android:id="@+id/tempratureValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="1dp"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="14sp"
                                    tools:text="-3*"
                                    android:textAlignment="center"
                                    android:layout_gravity="center"/>


                            </LinearLayout>

                            <!-- Textboxes for salinity -->
                            <LinearLayout
                                android:id="@+id/salinity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.88"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/waterCardTitle"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="SALT."
                                    android:textColor="@color/primaryTextColor" />

                                <TextView
                                    android:id="@+id/salinityValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="1dp"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="14sp"
                                    android:textAlignment="center"
                                    android:layout_gravity="center"
                                    tools:text="2.3" />


                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Infection card -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.2"
                        tools:visibility="invisible" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.8"
                        tools:visibility="invisible" />

                    <ImageView
                        android:id="@+id/infectionIcon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:elevation="11dp"
                        android:transitionName="image_big"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/infectionInfoCard"
                        app:srcCompat="@drawable/mdi___virus" />

                    <ImageView
                        android:id="@+id/circleFilledWhiteIcon2"
                        android:layout_width="71dp"
                        android:layout_height="66dp"
                        android:layout_gravity="center"
                        android:elevation="10dp"
                        android:transitionName="image_small"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/infectionInfoCard"
                        app:srcCompat="@drawable/circle_filled_white" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/infectionInfoCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <TextView
                                android:id="@+id/infectionCardTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="32dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="@string/infection"
                                android:textAlignment="center"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <!-- Textboxes for lakselus -->
                            <LinearLayout
                                android:id="@+id/lakselus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.13"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/infectionCardTitle"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="LUS"
                                    android:textColor="@color/primaryTextColor" />

                                <ImageView
                                    android:id="@+id/fare"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginTop="1dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/checkmark" />


                            </LinearLayout>

                            <!-- Textboxes for PD-->
                            <LinearLayout
                                android:id="@+id/pd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/infectionCardTitle"
                                app:layout_constraintVertical_bias="0.0"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="PD"
                                    android:textColor="@color/primaryTextColor" />

                                <ImageView
                                    android:id="@+id/pdIcon"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginTop="1dp"
                                    app:srcCompat="@drawable/checkmark"
                                    android:layout_gravity="center"/>

                            </LinearLayout>

                            <!-- Textboxes for ILA -->
                            <LinearLayout
                                android:id="@+id/ila"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.865"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/infectionCardTitle"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:text="ILA"
                                    android:textColor="@color/primaryTextColor" />

                                <ImageView
                                    android:id="@+id/ilaIcon"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginTop="1dp"
                                    app:srcCompat="@drawable/checkmark"
                                    android:layout_gravity="center" />


                            </LinearLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Weather card -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.8"
                        tools:visibility="invisible" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.2"
                        tools:visibility="invisible" />

                    <ImageView
                        android:id="@+id/weatherIcon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:elevation="11dp"
                        android:transitionName="image_weather"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/weatherInfoCard"
                        app:srcCompat="@drawable/mdi___cloud_outline" />

                    <ImageView
                        android:id="@+id/circleFilledWhiteIcon3"
                        android:layout_width="71dp"
                        android:layout_height="66dp"
                        android:layout_gravity="center"
                        android:elevation="10dp"
                        android:transitionName="image_small"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/weatherInfoCard"
                        app:srcCompat="@drawable/circle_filled_white" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/weatherInfoCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp">

                            <TextView
                                android:id="@+id/weatherCardTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="32dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="@string/vaer"
                                android:textAlignment="center"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <!-- Textboxes for today weather  -->
                            <LinearLayout
                                android:id="@+id/idag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.115"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/weatherCardTitle"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="@string/todayText"
                                    android:textColor="@color/primaryTextColor" />

                                <ImageView
                                    android:id="@+id/vaer_idag"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginTop="2dp"
                                    android:src="@drawable/sunny"
                                    android:layout_gravity="center"/>

                                <TextView
                                    android:id="@+id/temp_idag"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="6*"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="11sp"
                                    android:layout_gravity="center"/>

                            </LinearLayout>

                            <!-- Textboxes for tomorrows weather  -->
                            <LinearLayout
                              android:id="@+id/imorgen"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              app:layout_constraintEnd_toEndOf="parent"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toBottomOf="@+id/weatherCardTitle"
                              app:layout_constraintVertical_bias="0.0"
                              android:orientation="vertical" >

                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:layout_marginTop="8dp"
                                  android:fontFamily="@font/montserrat_medium"
                                  android:text="@string/tomorrow"
                                  android:textColor="@color/primaryTextColor" />

                              <ImageView
                                  android:id="@+id/vaer_imorgen"
                                  android:layout_width="16dp"
                                  android:layout_height="16dp"
                                  android:layout_marginTop="2dp"
                                  android:src="@drawable/sunny"
                                  android:layout_gravity="center"/>

                              <TextView
                                  android:id="@+id/temp_imorgen"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="7*"
                                  android:textColor="@color/primaryTextColor"
                                  android:textSize="11sp"
                                  android:layout_gravity="center"/>

                          </LinearLayout>

                            <!-- Textboxes for storm -->
                            <LinearLayout
                                android:id="@+id/storm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.992"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/weatherCardTitle"
                                android:orientation="vertical" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:text="@string/storm"
                                    android:textColor="@color/primaryTextColor"
                                    android:layout_gravity="center"/>

                                <ImageView
                                    android:id="@+id/storm_vaer"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginTop="2dp"
                                    android:src="@drawable/sunny"
                                    android:layout_gravity="center"/>

                                <TextView
                                    android:id="@+id/meldt_storm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/no_storm"
                                    android:textColor="@color/primaryTextColor"
                                    android:textSize="11sp"
                                    android:layout_gravity="center"/>


                            </LinearLayout>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <!-- Information cards -->

</androidx.constraintlayout.widget.ConstraintLayout>