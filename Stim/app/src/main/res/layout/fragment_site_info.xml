                                app:layout_constraintEnd_toEndOf="@+id/temp_imorgen"
                                app:layout_constraintStart_toStartOf="@+id/temp_imorgen"
                                app:layout_constraintTop_toBottomOf="@+id/imorgen" />

                            <TextView
                                android:id="@+id/temp_imorgen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="7*"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="11sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/vaer_imorgen" />

                            <TextView
                                android:id="@+id/storm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
