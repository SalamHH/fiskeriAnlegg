<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".GeneralInfoFragment">


    <!-- GENERAL INFO -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="OM ANLEGG"
                android:textColor="@color/primaryTextColor"
                android:textSize="40sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/fishIcon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:transitionName="image_big"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">


                <ImageView
                    android:id="@+id/imageView_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/cardview_dark_background"
                    android:contentDescription="@string/visual_of_the_location_of_the_site"
                    android:minHeight="150dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />

                <GridLayout
                    android:id="@+id/infoBoxes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:columnCount="2"
                    android:orientation="horizontal"
                    android:rowCount="1">

                    <!-- Water temperature card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/tempratureInfoCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/grey"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:text="Vanntemperatur:"
                            android:textColor="@color/primaryTextColor" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <!-- TODO: fix temperature icon -->

                            <ImageView
                                android:id="@+id/tempIcon"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:maxHeight="70dp"
                                android:padding="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/temperatureTextview"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@android:drawable/ic_menu_gallery"
                                app:tint="@color/black" />

                            <TextView
                                android:id="@+id/temperatureTextview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="----Â°"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="40sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/tempIcon"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/tempIcon"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Salt card-->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/saltInfoCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/grey"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardMaxElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="10dp"
                            android:text="Saltholdighet i vannet:"
                            android:textColor="@color/primaryTextColor" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/saltIcon"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_marginEnd="5dp"
                                android:padding="10dp"
                                android:src="@drawable/salt"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/saltTextview"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/saltTextview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="----"
                                android:textColor="@color/primaryTextColor"
                                android:textSize="40sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/saltIcon"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/generalInfoBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical">

                        <!-- POSISJON -->

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="Posisjon: "
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/posisjonView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="@string/blank"
                                android:textColor="@color/primaryTextColor" />

                        </RelativeLayout>

                        <!-- ANLEGGSNUMMER -->

                        <RelativeLayout
                            android:id="@+id/relativelayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:visibility="gone">

                            <!-- ANLEGGSNUMMER -->

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="Anleggsnummer:"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/anleggsnrView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="@string/blank"
                                android:textColor="@color/primaryTextColor" />

                            <!-- PLASSERING -->

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/anleggsnrView"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="Plassering:"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/plasseringView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/anleggsnrView"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="@string/blank"
                                android:textColor="@color/primaryTextColor" />

                            <!-- KAPASITET -->

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/plasseringView"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="Kapasitet:"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/kapasitetView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/plasseringView"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="@string/blank"
                                android:textColor="@color/primaryTextColor" />

                            <!-- VANNTYPE -->

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/kapasitetView"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="Vanntype:"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/vannTypeView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/kapasitetView"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="@string/blank"
                                android:textColor="@color/primaryTextColor" />

                            <!-- KOMMUNE -->

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/vannTypeView"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="Kommune:"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/prodOmraadeView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/vannTypeView"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:text="@string/blank"
                                android:textColor="@color/primaryTextColor" />

                        </RelativeLayout>

                        <!-- PLASSERING -->

                        <!-- KAPASITET -->

                        <!-- VANNTYPE -->

                        <!-- KOMMUNE -->

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--TODO: fix header icon -->

</androidx.constraintlayout.widget.ConstraintLayout>