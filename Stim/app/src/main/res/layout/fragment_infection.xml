<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue"
    android:backgroundTint="@color/skyblue"
    android:backgroundTintMode="multiply"
    android:gravity="center"
    tools:context=".InfectionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="7dp"
            android:elevation="20dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- INFECTION-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/circleFilledWhiteIcon2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:paddingTop="10dp"
                app:layout_constraintBottom_toBottomOf="@id/guideline3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/guideline3"
                app:srcCompat="@drawable/circle_filled_white" />

            <ImageView
                android:id="@+id/infectionIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:transitionName="image_big"
                app:layout_constraintBottom_toBottomOf="@id/guideline3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/guideline3"
                app:srcCompat="@drawable/mdi___virus"
                tools:layout_editor_absoluteY="31dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="50dp" />

            <TextView
                android:id="@+id/contaminationText"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/overwave"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="SMITTEDATA"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintBottom_toTopOf="@id/informationLayoutInfection"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/infectionIcon" />

            <TextView
                android:id="@+id/sitename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/primaryTextColor"
                android:gravity="center"
                android:text="@string/site_name"
                app:layout_constraintTop_toBottomOf="@id/contaminationText" />

            <LinearLayout
                android:id="@+id/informationLayoutInfection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/contaminationText">

                <androidx.cardview.widget.CardView
                    android:id="@+id/InfectionStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/StatusIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_toStartOf="@id/infectionStatusText"
                            android:clickable="false"
                            android:padding="5dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/no_data" />

                        <TextView
                            android:id="@+id/infectionStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/montserrat"
                            android:text="Beregner status..."
                            android:textColor="@color/primaryTextColor"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/infectionValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/montserrat"
                            android:text="Nåværende smittepress"
                            android:layout_below="@id/infectionStatusText"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="15sp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Infection graph card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/InfectionInfoCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/infectionChartHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/montserrat_light_italic"
                            android:text="Graf over lakselussmitte"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="15sp" />

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/infectionChart"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:layout_below="@id/infectionChartHeader"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/ukenrtag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/infectionChart"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/montserrat_light"
                            android:text="Uke Nr."
                            android:textColor="@color/primaryTextColor"
                            android:textSize="12sp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <!-- Information card -->

                <androidx.cardview.widget.CardView
                    android:id="@+id/InformationCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/infoHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:textStyle="bold"
                            android:text="Informasjon om smittedata"
                            android:textColor="@color/primaryTextColor"
                            android:textSize="15sp"
                            android:layout_gravity="center" />


                        <TextView
                            android:id="@+id/infoText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/montserrat_light"
                            android:text="Denne grafen viser til antall lakselus funnet i anlegget. For å se mer info om ulike statussymbol, klikk på symbolet lengre oppe. Finn all data i tabellen nedenfor."
                            android:textColor="@color/primaryTextColor"
                            android:textSize="13sp"
                            android:lineSpacingMultiplier="1.2"
                            android:gravity="center" />


                        <TextView
                            android:id="@+id/infoTextExtra"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/montserrat_light"
                            android:text="Lakselus er en parasitt som suger ut blod fra laksen. På de fleste anlegg måles lakselus manuelt. En gang i måneden drar fiskehelsepersonell ut, plukker opp noen fisker og teller antall lus. Grensen for å måtte behandle går på 0.5 lus per fisk. For å fjerne lakselus benyttes det enten kjemikalier eller mekanisk fjerning. Denne prosessen er assosiert med en høy dødelighet. Parasitten er også veldig farlig for bevarelsen av villaksen i Norge, og det er det som gjør lakselusen spesielt skadelig.  Laks i oppdrettsanlegg rømmer med parasitten og smitter dette over til villaksen, som skader populasjonen. Den bidrar også til at næringen taper millioner av dollar hvert år. Derfor ønsker man kontinuerlig monitorering for å identifisere de områdene med forhøyet lakselus smittetrykk som utgjør en uakseptabel risiko for dødeligheten til villaks."
                            android:textColor="@color/primaryTextColor"
                            android:textSize="13sp"
                            android:lineSpacingMultiplier="1.2"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/arrow"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="10dp"
                            app:srcCompat="@drawable/down_darkblue"
                            app:tint="@color/primaryTextColor" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/tableCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/table_display_week"
                                android:layout_weight="0.25"
                                android:gravity="center"
                                android:text="Uke Nr."
                                android:fontFamily="@font/montserrat_bold"
                                android:textColor="@color/secondaryTextColor"
                                android:textStyle="bold"
                                android:background="@color/darker_skyblue" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/table_display_float"
                                android:text="Smittedata"
                                android:background="@color/darker_skyblue"
                                android:textColor="@color/secondaryTextColor"
                                android:textStyle="bold"
                                android:layout_weight="0.75"
                                android:gravity="center"
                                android:fontFamily="@font/montserrat_light" />

                        </LinearLayout>

                        <TableLayout
                            android:id="@+id/tablelayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:stretchColumns="*" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- PD VIRUS CARD -->

                <androidx.cardview.widget.CardView
                    android:id="@+id/PDCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/pdIcon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:elevation="11dp"
                            app:srcCompat="@drawable/pd_good" />


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/pdIcon">

                            <!-- UKJENT MISTANKE OM PD -->

                            <TextView
                                android:id="@+id/mistanke_ukjent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Mistanke PD ukjent: "
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/mistanke_ukjentDato"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/montserrat_light"
                                android:text="@string/ingen_mistanke"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/paavist_ukjent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/mistanke_ukjent"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Påvist PD Ukjent:"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/paavist_ukjentDato"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/mistanke_ukjent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/montserrat_light"
                                android:text="@string/ikke_p_vist"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/mistanke_sav2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/paavist_ukjent"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Mistanke SAV2 PD:"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/mistanke_sav2Dato"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/paavist_ukjent"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/montserrat_light"
                                android:text="@string/ingen_mistanke"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/paavist_sav2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/mistanke_sav2"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Påvist SAV2 PD:"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/paavist_sav2Dato"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/mistanke_sav2"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/montserrat_light"
                                android:text="@string/ikke_p_vist"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/mistanke_sav3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/paavist_sav2"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Mistanke SAV3 PD:"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/mistanke_sav3Dato"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/paavist_sav2"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/montserrat_light"
                                android:text="@string/ingen_mistanke"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/paavist_sav3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/mistanke_sav3"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Påvist SAV3 PD:"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/paavist_sav3Dato"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/mistanke_sav3"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/montserrat_light"
                                android:text="@string/ikke_p_vist"
                                android:textColor="@color/primaryTextColor" />

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- ILA VIRUS CARD -->

                <androidx.cardview.widget.CardView
                    android:id="@+id/ILACard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/colorAccent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/ilaIcon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:elevation="11dp"
                            app:srcCompat="@drawable/ila_good" />


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/pdIcon">

                            <!-- UKJENT MISTANKE OM PD -->

                            <TextView
                                android:id="@+id/mistanke"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Mistanke ILA: "
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/mistankeDato"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/montserrat_light"
                                android:text="@string/ingen_mistanke"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/paavist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/mistanke"
                                android:layout_alignParentStart="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="Påvist ILA:"
                                android:textColor="@color/primaryTextColor" />

                            <TextView
                                android:id="@+id/paavistDato"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/mistanke"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:fontFamily="@font/montserrat_light"
                                android:text="@string/ingen_mistanke"
                                android:textColor="@color/primaryTextColor" />


                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>