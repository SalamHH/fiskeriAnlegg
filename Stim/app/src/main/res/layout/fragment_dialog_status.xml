<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ikoner for smittestatus"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/fantIkkeData"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/no_data" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Fant ikke smittedata"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_light"
                android:layout_toEndOf="@+id/fantIkkeData"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/ingenSmitte"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/checkmark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Veldig lav/ingen smitte"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_light"
                android:layout_toEndOf="@+id/ingenSmitte"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/decrease"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_down" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Signifikant smittemiskning"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_light"
                android:layout_toEndOf="@+id/decrease"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/lavSmitte"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/no_change" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Lav/medium smitte"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_light"
                android:layout_toEndOf="@+id/lavSmitte"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/increase"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/arrow_up" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Signifikant smitteøkning"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_light"
                android:layout_toEndOf="@+id/increase"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/high"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/farevarsel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Høy smitte"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_light"
                android:layout_toEndOf="@+id/high"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>