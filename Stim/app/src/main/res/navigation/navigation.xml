<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/startPageFragment">

    <fragment
        android:id="@+id/startPageFragment"
        android:name="no.uio.ifi.team16.stim.StartPageFragment"
        android:label="STIM"
        tools:layout="@layout/fragment_start_page">
        <action
            android:id="@+id/action_startPageFragment_to_siteListFragment"
            app:destination="@id/siteListFragment" />
        <action
            android:id="@+id/action_startPageFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>

    <fragment
        android:id="@+id/siteListFragment"
        android:name="no.uio.ifi.team16.stim.SiteListFragment"
        android:label="All sites" >
        <action
            android:id="@+id/action_siteListFragment_to_siteInfoFragment"
            app:destination="@id/siteInfoFragment"
            app:enterAnim="@android:anim/slide_in_left" />
    </fragment>
    <fragment
        android:id="@+id/siteInfoFragment"
        android:name="no.uio.ifi.team16.stim.SiteInfoFragment"
        android:label=""
        tools:layout="@layout/fragment_site_info" >
        <action
            android:id="@+id/action_siteInfoFragment_to_weatherFragment"
            app:destination="@id/weatherFragment"
            app:enterAnim="@android:anim/slide_in_left" />
        <action
            android:id="@+id/action_siteInfoFragment_to_saltFragment"
            app:destination="@id/saltFragment"
            app:enterAnim="@android:anim/slide_in_left" />
        <action
            android:id="@+id/action_siteInfoFragment_to_infectionFragment"
            app:destination="@id/infectionFragment"
            app:enterAnim="@android:anim/slide_in_left" />
    </fragment>
    <fragment
        android:id="@+id/infectionFragment"
        android:name="no.uio.ifi.team16.stim.InfectionFragment"
        tools:layout="@layout/fragment_infection" />
    <fragment
        android:id="@+id/saltFragment"
        android:name="no.uio.ifi.team16.stim.GeneralInfoFragment"
        tools:layout="@layout/fragment_general_info" />
    <fragment
        android:id="@+id/weatherFragment"
        android:name="no.uio.ifi.team16.stim.WeatherFragment"
        tools:layout="@layout/fragment_weather" />
    <fragment
        android:id="@+id/mapFragment"
        android:name="no.uio.ifi.team16.stim.MapFragment"
        android:label="MapFragment">
        <action
            android:id="@+id/action_mapFragment_to_siteInfoFragment"
            app:destination="@id/siteInfoFragment" />
    </fragment>


</navigation>